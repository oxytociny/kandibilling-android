		<item name="android:buttonStyle">@style/Theme.MiKandi.Menu.Button</item>
	</style>

	<style name="Theme.MiKandi.Menu.Title" parent="android:style/Widget.TextView">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:clickable">true</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="Theme.MiKandi.Menu.Button">
		<item name="android:background">@drawable/btn_menu</item>
	</style>

	<style name="Theme.MiKandi.Separator">
